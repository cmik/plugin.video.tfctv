<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.tfctv" name="TFC.tv" version="1.5.0" provider-name="cmik">
    <requires>
        <import addon="xbmc.python" version="2.25.0"/>
        <import addon="script.module.parsedom" version="0.9.1"/>
        <import addon="script.common.plugin.cache" version="2.5.5"/>
        <import addon="script.module.inputstreamhelper" version="0.4.2" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.service" library="service.py" start="startup"/>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">TFC Pinoy TV</summary>
        <description lang="en">Enjoy TFC's Pinoy TV shows, movies, news and live channels! This is not an official TFC.tv addon. A subscription to TFC.tv website (http://tfc.tv) is required to enjoy TFC's catalog.</description>
        <disclaimer lang="en">No warranty here</disclaimer>
        <language>en</language>
        <platform>all</platform>
        <licence>GNU</licence>
        <forum>https://forum.kodi.tv/showthread.php?tid=317008</forum>
        <source>https://github.com/cmik/cmik.xbmc</source>
        <news>v1.5.0 (1/09/2020)
          [fix] Fixed Live streams playback issue
          [new] Repo has been removed from addon.xml to avoid multiple repo for the same add-ons. To keep your add-on up to date, install Cmik Repo from https://repo.cmik.me/repository/
        </news>
        <assets>
            <icon>resources/icon.jpg</icon>
            <fanart>resources/fanart.jpg</fanart>
            <banner></banner>
            <clearlogo></clearlogo>
            <screenshot></screenshot>
        </assets>
    </extension>
</addon>
